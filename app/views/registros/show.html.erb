<%- model_class = Registro -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:referencia) %>:</strong></dt>
  <dd><%= @registro.referencia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descricao) %>:</strong></dt>
  <dd><%= @registro.descricao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:observacao) %>:</strong></dt>
  <dd><%= @registro.observacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:concluido) %>:</strong></dt>
  <dd><%= @registro.concluido %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              registros_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_registro_path(@registro), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              registro_path(@registro),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
