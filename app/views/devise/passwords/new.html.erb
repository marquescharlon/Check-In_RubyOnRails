<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
<%= devise_error_messages! %>
<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="panel panel-default">
				<!-- HEAD -->
				<div class="panel-heading">
					<i class="fa fa-user" aria-hidden="true"></i> <%= t('.forgot_your_password', :default => 'Forgot your password?') %>
				</div>
				<!-- BODY -->
				<div class="panel-body">
					<!-- FORM -->
					<form class="form-horizontal" role="form">
						<!-- E-MAIL -->
						<div class="form-group">
							<label class="col-sm-3 control-label">Email</label>
							<div class="col-sm-9">
								<%= f.email_field :email, :class => "form-control", :placeholder => "E-mail"%>
							</div>
						</div>
						<!-- BOTÃ•ES -->
						<div class="form-group last">
							<div class="col-sm-offset-3 col-sm-9">
								<br>
								<%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), :class => "btn btn-success btn-sm"%>
							</div>
							<div class="col-sm-offset-3 col-sm-9">
								<br>
							</div>
							<div class="col-sm-offset-3 col-sm-9">
								<%= render "devise/shared/links" %>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
<% end %>