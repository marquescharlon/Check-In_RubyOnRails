<%= form_for @produto, :html => { :class => "form-horizontal produto", :multipart => "true"} do |f| %>

<% if @produto.errors.any? %>
<div id="error_expl" class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title"><%= pluralize(@produto.errors.count, "error") %> prohibited this produto from being saved:</h3>
  </div>
  <div class="panel-body">
    <ul>
      <% @produto.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="form-group">
  <%= f.label :imagem, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.file_field :imagem %>
    <%#= f.text_field :imagem, :class => 'form-control' %>
  </div>
  <%=f.error_span(:imagem) %>
</div>
<div class="form-group">
  <%= f.label :nome, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :nome, :class => 'form-control' %>
  </div>
  <%=f.error_span(:nome) %>
</div>
<div class="form-group">
  <%= f.label :descricao, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :descricao, :class => 'form-control' %>
  </div>
  <%=f.error_span(:descricao) %>
</div>
<div class="form-group">
  <%= f.label :tipo_id, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%#= collection_select(:produtos,:tipo_id,Tipo.all,:id,:nome)%>
    <%= f.text_field :tipo_id, :class => 'form-control' %>
    <%=f.error_span(:tipo_id) %>
  </div>
  <div class="form-group">
    <%= f.label :valor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :valor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:valor) %>
  </div>
  <div class="form-group">
    <%= f.label :cupom, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cupom, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cupom) %>
  </div>
  <div class="form-group">
    <%= f.label :publicado, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :publicado, :class => 'form-control' %>
    </div>
    <%=f.error_span(:publicado) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      produtos_path, :class => 'btn btn-default' %>
    </div>
  </div>

  <% end %>

