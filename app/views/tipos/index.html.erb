<%- model_class = Tipo -%>

<div class="container-fluid">
  <div class="row col-md-10 col-md-offset-1">
    <div class="panel panel-default">
      <table class="table table-striped">
        <div class="panel-heading">
          <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
        </div>
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:nome) %></th>
            <th><%= model_class.human_attribute_name(:created_at) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @tipos.each do |tipo| %>
          <tr>
            <td><%= link_to tipo.id, tipo_path(tipo) %></td>
            <td><%= tipo.nome %></td>
            <td><%= friendly_date(tipo.created_at) %><%#=l tipo.created_at %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_tipo_path(tipo), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              tipo_path(tipo),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to t('.new', :default => t("helpers.links.new")), new_tipo_path, :class => 'btn btn-primary' %>
    <br><br>
    <%= will_paginate @mesas, renderer: BootstrapPagination::Rails %>
  </div>
</div>































